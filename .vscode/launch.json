{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/new-frontend"
    },
    {
      "type": "lldb", // Rustデバッガ（CodeLLDB拡張機能が必要）
      "request": "launch",
      "name": "Rust: Debug Backend",
      "cargo": {
        "args": ["build"], // まずビルドさせる
        "cwd": "${workspaceFolder}/backend"
      },
      // 実行ファイル（バイナリ）の場所を直接指定する
      "program": "${workspaceFolder}/backend/target/debug/detective-backend.exe",
      "cwd": "${workspaceFolder}/backend", 
      "console": "integratedTerminal"
          }
  ],
  "compounds": [
    {
      "name": "Debug Both",
      "configurations": ["Next.js: Debug Frontend", "Rust: Debug Backend"]
    }
  ]
}